---
import BlogLayout from '../../../layouts/BlogLayout.astro';
import { getCollection } from 'astro:content';
import slugify from 'slugify';

export async function getStaticPaths({ paginate }) {
  const posts = await getCollection('berita');
  posts.sort((a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate));
  return paginate(posts, { pageSize: 9 });
}

const { page } = Astro.props;
const fixHtml = (url) => `${url}.html`;
---

<BlogLayout pageTitle="Berita">
  <section class="pt-32 pb-12 bg-white dark:bg-gray-900">
    <div class="mx-auto max-w-screen-xl px-4 md:px-8 lg:px-12">
      <div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
        <h2 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">Berita FPBS</h2>
        <p class="font-light text-gray-500 sm:text-xl dark:text-gray-400">
          Kumpulan informasi terbaru seputar kegiatan, agenda, dan pengumuman dari FPBS UPI.
        </p>
      </div>

      <div class="grid gap-8 lg:grid-cols-3">
        {page.data.map(post => {
          const { title, pubDate, image, tags } = post.data;
          const slug = slugify(title, { lower: true, strict: true });
          const url = fixHtml(`/berita/${slug}`);

          return (
            <article class="bg-white rounded-lg border border-gray-200 shadow-md hover:shadow-lg dark:bg-gray-800 dark:border-gray-700 transition overflow-hidden flex flex-col h-full">
              <a href={url}>
                {image && <img src={image.url} alt={image.alt} class="w-full h-48 object-cover" />}
              </a>
              <div class="flex flex-col justify-between flex-1 p-6">
                <div class="flex items-center justify-between mb-2">
                  <span class="inline-block bg-purple-100 text-purple-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-purple-200 dark:text-purple-800 w-fit">
                    {tags?.[0] ?? 'Berita'}
                  </span>
                  <span class="text-sm text-gray-400">{pubDate}</span>
                </div>
                <h2 class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white">
                  <a href={url}>{title}</a>
                </h2>
              </div>
            </article>
          );
        })}
      </div>

      <div class="flex justify-center mt-12 gap-4">
        {page.url.prev && (
          <a href={fixHtml(page.url.prev)} class="text-purple-700 dark:text-purple-400 hover:underline">← Sebelumnya</a>
        )}
        <span class="text-gray-500 dark:text-gray-300">Halaman {page.currentPage} dari {page.lastPage}</span>
        {page.url.next && (
          <a href={fixHtml(page.url.next)} class="text-purple-700 dark:text-purple-400 hover:underline">Berikutnya →</a>
        )}
      </div>
    </div>
  </section>
</BlogLayout>
