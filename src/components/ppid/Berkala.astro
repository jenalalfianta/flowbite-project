---
const fixHtml = (url) => `${url}.html`;
---

<!-- Section Informasi Wajib -->
<section class="bg-white dark:bg-gray-900 py-30 px-4">
  <div class="max-w-5xl mx-auto text-center">
    <h3 class="text-3xl font-bold text-purple-800 mb-10">
      INFORMASI YANG WAJIB DISEDIAKAN DAN <br>DIUMUMKAN SECARA BERKALA
    </h3>

    <div class="space-y-4 text-left">
      <!-- Profil Fakultas -->
      <details class="group border border-gray-200 dark:border-gray-700 rounded-lg p-4 transition-shadow hover:shadow-lg">
        <summary class="flex items-center justify-between cursor-pointer text-lg font-medium text-gray-800 dark:text-gray-200">
          Profil Fakultas
          <span class="transition-transform duration-300 group-open:rotate-180">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </span>
        </summary>
        <div class="mt-2 pl-4 text-gray-600 dark:text-gray-400">
          <ul class="list-disc ml-4 space-y-1">
            <li><a href="/profil/profil.html" class="no-underline hover:text-purple-700">Tentang FPBS</a></li>
            <li><a href="/profil/fasilitas.html" class="no-underline hover:text-purple-700">Fasilitas</a></li>
            <li><a href="/profil/kontak.html" class="no-underline hover:text-purple-700">Kontak</a></li>
          </ul>
        </div>
      </details>

      <!-- Program Studi -->
      <details class="group border border-gray-200 dark:border-gray-700 rounded-lg p-4 transition-shadow hover:shadow-lg">
        <summary class="flex items-center justify-between cursor-pointer text-lg font-medium text-gray-800 dark:text-gray-200">
          Program Studi
          <span class="transition-transform duration-300 group-open:rotate-180">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </span>
        </summary>
        <div class="mt-2 pl-4 text-gray-600 dark:text-gray-400">
          <p><a href="/profil/program-studi.html" class="no-underline hover:text-purple-700">Program Studi di Fakultas Pendidikan Bahasa dan Sastra</a></p>
        </div>
      </details>

      <!-- Profil Pimpinan -->
      <details class="group border border-gray-200 dark:border-gray-700 rounded-lg p-4 transition-shadow hover:shadow-lg">
        <summary class="flex items-center justify-between cursor-pointer text-lg font-medium text-gray-800 dark:text-gray-200">
          Profil Pimpinan
          <span class="transition-transform duration-300 group-open:rotate-180">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </span>
        </summary>
        <div class="mt-2 pl-4 text-gray-600 dark:text-gray-400">
          <p><a href="/profil/pimpinan.html" class="no-underline hover:text-purple-700">Pimpinan Fakultas Pendidikan Bahasa dan Sastra</a></p>
        </div>
      </details>

      <!-- Kalender Akademik -->
      <details class="group border border-gray-200 dark:border-gray-700 rounded-lg p-4 transition-shadow hover:shadow-lg">
        <summary class="flex items-center justify-between cursor-pointer text-lg font-medium text-gray-800 dark:text-gray-200">
          Kalender Akademik
          <span class="transition-transform duration-300 group-open:rotate-180">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </span>
        </summary>
        <div class="mt-2 pl-4 text-gray-600 dark:text-gray-400">
          <a href="https://www.upi.edu/kalendar" target="_blank" class="no-underline hover:text-purple-700">Kalender Akademik Universitas Pendidikan Indonesia</a>
        </div>
      </details>

      <!-- Laporan Dekan -->
      <details class="group border border-gray-200 dark:border-gray-700 rounded-lg p-4 transition-shadow hover:shadow-lg">
        <summary class="flex items-center justify-between cursor-pointer text-lg font-medium text-gray-800 dark:text-gray-200">
          Laporan Dekan
          <span class="transition-transform duration-300 group-open:rotate-180">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </span>
        </summary>
        <div class="mt-2 pl-4 text-gray-600 dark:text-gray-400">
          <ul class="list-disc ml-4 space-y-1">
            <li><a href="https://drive.google.com/file/d/1SX2VdGqUhaLO5HOMDiE97v_u6KIxgmx5/view?usp=sharing" target="_blank" class="no-underline hover:text-purple-700">Laporan Kinerja Tahunan FPBS UPI - 2022</a></li>
            <li><a href="https://drive.google.com/file/d/1k0AAW56L5VoUSXOw0f4BnIaMm3o8TCfb/view?usp=sharing" target="_blank" class="no-underline hover:text-purple-700">Laporan Kinerja Tengah Tahun FPBS UPI – 2023</a></li>
            <li><a href="https://drive.google.com/file/d/1KKkSqBMszIEqKbyshN78-kgXF_mLbQ0D/view?usp=sharing" target="_blank" class="no-underline hover:text-purple-700">Laporan Kinerja Tahunan FPBS UPI – 2023</a></li>
          </ul>
        </div>
      </details>
    </div>
  </div>
</section>
