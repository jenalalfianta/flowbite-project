---
const { prodiData, activeTab } = Astro.props;
---

<section class="bg-white dark:bg-gray-900 py-16 px-4">
  <div class="max-w-6xl mx-auto space-y-24">

    {Object.entries(prodiData.sections).map(([key, section]) => (
      <div id={key} data-content class={activeTab === key ? 'block' : 'hidden'}>
        <h2 class="text-2xl md:text-3xl font-bold text-purple-900 dark:text-purple-400 mb-4">{section.title}</h2>

        {section.content && (
          <p class="text-gray-800 dark:text-gray-100 leading-relaxed">{section.content}</p>
        )}

        {section.externalLink && (
          <a href={section.externalLink} target="_blank" class="text-purple-700 hover:underline">
            Lihat Detail
          </a>
        )}
      </div>
    ))}

  </div>
</section>
