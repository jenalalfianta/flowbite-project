---
const { prodiData, activeTab } = Astro.props;
const sections = prodiData.data.sections;
const menu = prodiData.data.menu || [];
---

<section class="bg-white dark:bg-gray-900 py-16 px-4">
  <div class="max-w-6xl mx-auto space-y-24">
    {Object.entries(sections).map(([key, section]) => (
      <div id={key} data-content class={activeTab === key ? 'block' : 'hidden'}>
        <h2 class="text-2xl md:text-3xl font-bold text-purple-900 dark:text-purple-400 mb-4">
          {menu.find(item => item.id === key)?.label || section.title || key}
        </h2>

        {typeof section === 'object' && section.external ? (
          <a href={section.external} target="_blank" class="text-purple-700 hover:underline">
            Lihat Detail
          </a>
        ) : (
          <p class="text-gray-800 dark:text-gray-100 leading-relaxed">
            {typeof section === 'object' ? section.content : section}
          </p>
        )}
      </div>
    ))}
  </div>
</section>
